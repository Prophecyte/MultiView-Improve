{
  "name": "multiview-desktop",
  "version": "1.0.0",
  "description": "MultiView Desktop - Craft Rooms & Video Rooms",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac --x64 --arm64",
    "build:all": "electron-builder --win --mac",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.multiview.desktop",
    "productName": "MultiView",
    "copyright": "Copyright Â© 2026 MultiView",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "offline-store.js",
      "icons/**/*"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "icons/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "icons/icon.icns",
      "category": "public.app-category.productivity"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icons/icon.ico",
      "uninstallerIcon": "icons/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  }
}
